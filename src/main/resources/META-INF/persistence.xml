<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="lab_week_2">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <include-unlisted-classes>false</include-unlisted-classes>
        <properties>
            <property name="eclipselink.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mariadb://localhost:3306/mydb?createDatabaseIfNotExits=true"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="sapassword"/>
            <property name="eclipselink.ddl.generation" value="create-tables"/>
            <property name="jakarta.persistence.schema.generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
